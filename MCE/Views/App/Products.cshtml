@model IEnumerable<MCE.ViewModels.ProductViewModel>
<div class="card-box table-responsive">
    <h4 class="m-t-0 header-title"><b>Manage Articles</b></h4>
    <div class="text-muted font-13 m-b-30">
        <button type="button" class="btn btn-success btn-rounded waves-effect waves-light pull-right" data-url="CreateProduct" data-form="SaveProductForm" data-action="Product" onclick="CreateElement(this)">
            <span class="btn-label"><i class="fa fa-plus"></i></span>
            Add Article
        </button>
    </div>
    <br />
    <br />
    <br />
    <table id="ProductsTbl" class="table table-striped table-bordered dataTable no-footer dtr-inline">
        <thead>
            <tr>
                <th>Name</th>
                <th>Model</th>
                <th>Description</th>
                <th>Unit</th>
                <th>Minimum quantity in stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>