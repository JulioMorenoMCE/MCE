@model MCE.Models.tblSupplier
@using (@Html.BeginForm("SaveSupplier", "App", FormMethod.Post, new { @id = "SaveSupplierForm", enctype = "multipart/form-data", @data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <div class="">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-sm-12 nopadding">
            <div class="col-sm-12">
                <label class="col-sm-6">Company:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.company)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">First name:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.name)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">Last name:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.surname)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">Model:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.nipt)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">Tel 1:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.phone1)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">Tel 2:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.phone2)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">Email:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.email)</div>
            </div>
            <div class="clearfix"></div>
            <br />
            <div class="col-sm-12">
                <label class="col-sm-6">Address:</label>
                <div class="col-sm-6">@Html.DisplayFor(model => model.email)</div>
            </div>
            <br />
            <div class="col-sm-12">
                <div class="pull-right">
                    <button type="button" class="btn btn-white waves-light" onclick="CloseModal('view-modal')">Close</button>&nbsp;
                </div>
            </div>
        </div>
    </div>
}

