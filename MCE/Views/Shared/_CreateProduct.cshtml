@model MCE.ViewModels.ProductViewModel

@using (@Html.BeginForm("SaveProduct", "App", FormMethod.Post, new { @id = "SaveProductForm", enctype = "multipart/form-data", @data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <div class="">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label class="col-md-12 pull-left">Name<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Product.name, new { htmlAttributes = new { @class = "form-control", required = "required", @data_bv_notempty_message = "The name can not be left empty!" } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Code<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Product.number, new { htmlAttributes = new { @class = "form-control", required = "required", @data_bv_notempty_message = "The product code can not be left blank!" } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Description</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Product.description, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Unit<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.DropDownListFor(x => Model.Product.idunit, new SelectList(Model.Units, "id", "name"), htmlAttributes: new { @class = "form-control", required = "required", @data_bv_notempty_message = "The unit can not be left empty!" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Minimum quantity in stock</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Product.minquantity, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1", Value = 0 } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="clearfix"></div>
                    @Html.HiddenFor(model => model.Product.status, new { Value = true })
                    @Html.HiddenFor(model => model.Product.datecreated, new { Value = DateTime.Now })
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-md-12">
                    <div class="pull-right">
                        <button type="button" class="btn btn-white waves-light" onclick="CloseModal('create-modal')">Cancel</button>&nbsp;
                        <button type="button" class="btn btn-success pull-right" data-id="SaveProductForm" data-url="SaveProduct" data-table="ProductsTbl" onclick="SubmitCreateForm(this)">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
