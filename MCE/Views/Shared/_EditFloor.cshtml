@model MCE.Models.tblFloor

@using (@Html.BeginForm("SaveFloor", "App", FormMethod.Post, new { @id = "SaveChangesFloorForm", enctype = "multipart/form-data", @data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <div class="">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-sm-8 col-sm-offset-2">
            <div class="form-group">
                <label class="col-md-12 pull-left">Job<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Job, new { htmlAttributes = new { @class = "form-control", required = "required", @data_bv_notempty_message = "The name can not be left empty!", Value = Model.Job } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Technician<span style="color:red;">*</span></label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Technician, new { htmlAttributes = new { @class = "form-control", required = "required", @data_bv_notempty_message = "The surname can not be left empty!", Value = Model.Technician } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Stage</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Stage, new { htmlAttributes = new { @class = "form-control", Value = Model.Stage } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">Status</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", Value = Model.Status } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">CAT</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CAT, new { htmlAttributes = new { @class = "form-control", Value = Model.CAT } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">ST</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.ST, new { htmlAttributes = new { @class = "form-control", Value = Model.ST } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12 pull-left">TTC</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TTC, new { htmlAttributes = new { @class = "form-control", Value = Model.TTC } })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12">
                    Description / Notes
                </label>
                <div class="col-md-12">
                    <div class="clearfix"></div>
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", Value = Model.description } })
                    @Html.HiddenFor(model => model.status, new { Value = true })
                    @Html.HiddenFor(model => model.id, new { Value = Model.id })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-md-12">
                    <div class="pull-right">
                        <button type="button" class="btn btn-white waves-light" onclick="CloseModal('update-modal')">Cancel</button>&nbsp;
                        <button type="button" class="btn btn-warning pull-right" data-id="SaveChangesFloorForm" data-url="UpdateFloor" data-table="FloorsTbl" onclick="SubmitEditForm(this)">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
